<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimaActivity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>


    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/color_Main_Body</item>
        <item name="android:textColorSecondary">@color/color_Hint_Word</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bs_dialogBackground">@color/white</item>
        <item name="bs_dividerColor">@color/white</item>
        <item name="bs_numColumns">5</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>


    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <!-- Custom layout for PreferenceFragmentCompat -->
    </style>

    <!-- Style for a custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_marginLeftPercent">3%w</item>
        <item name="layout_marginRightPercent">3%w</item>
    </style>

    <style name="DividedLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_Hint_Word</item>
    </style>

    <style name="HeaderView">
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_heightPercent">10%w</item>
    </style>
    <style name="CommonHeadDefault">
        <item name="android:textColor">@color/ye_color_Main_Word</item>
    </style>
    <style name="CommonHeadHint">
        <item name="android:textColor">@color/ye_color_Hint_Word</item>
    </style>
    <!--详情页点赞-->
    <style name="DetailFollow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_Hint_Word</item>
        <item name="layout_textSizePercent">4%w</item>
    </style>

    <style name="UserDataLayout">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="UserDataNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_Main_Body</item>
        <item name="layout_textSizePercent">12%w</item>
    </style>
    <style name="UserDataDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_marginTopPercent">1%w</item>
        <item name="android:textColor">@color/color_Hint_Word</item>
        <item name="layout_textSizePercent">10%w</item>
    </style>
    <style name="BizhiHomeTag">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="layout_heightPercent">20%w</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="BizhiHomeTagImg">
        <item name="layout_widthPercent">50%h</item>
        <item name="layout_heightPercent">50%h</item>
    </style>
    <style name="BizhiHomeTagText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_Hint_Word</item>
        <item name="layout_textSizePercent">13%w</item>
    </style>


    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
