<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yeyue.learns.utils.BindingUtils"/>
        <variable
            name="MovieCount"
            type="com.yeyue.learns.enity.movie.MovieCount" />

    </data>

    <com.yeyue.library.widgets.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> BindingUtils.openMovieCount(view,MovieCount)}"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{MovieCount.content}"
            android:textColor="@color/color_Hint_Word"
            app:layout_paddingPercent="3%w"
            app:layout_textSizePercent="5%w" />

    </com.yeyue.library.widgets.percent.PercentLinearLayout>
</layout>