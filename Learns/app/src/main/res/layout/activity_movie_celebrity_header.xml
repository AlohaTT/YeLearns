<?xml version="1.0" encoding="utf-8"?>
<com.yeyue.library.widgets.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.yeyue.library.widgets.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            app:layout_heightPercent="70%w" />

        <ImageView
            android:id="@+id/ivAvator"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:layout_heightPercent="40%w"
            app:layout_marginBottomPercent="10%w"
            app:layout_widthPercent="25%w" />
    </com.yeyue.library.widgets.percent.PercentRelativeLayout>
</com.yeyue.library.widgets.percent.PercentLinearLayout>